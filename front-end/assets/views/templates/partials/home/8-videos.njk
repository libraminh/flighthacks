{% import "macros/content.njk" as marco1 %}

{% set posts = [
  {
    img: '/img/objects/video-thumbnail-1.jpg',
    title: 'Swiss Airlines First Class B777-300ER',
    url: ''
  },
  {
    img: '/img/objects/video-thumbnail-2.jpg',
    title: '10 Little-Known Tricks for Perfect Sleep on a Flight',
    url: ''
  }
] %}

{% extends 'global/inner-container.njk' %}

{% block inner_content %}
  <div class="section-deals">
    <p class="font-weight-bold text-sm margin-bottom-md red-dot red-dot--center padding-left-lg text-color-primary text-uppercase position-relative">Latest videos</p>

    <div class="grid grid-gap-md">
      {% for post in posts %}
        <div class="col-12 col-6@md to-animate" data-animate="up" data-delay="{{ loop.index0 * 0.15 }}">
          {{ marco1.box_video(post) }}
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
